<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Event Mail</h2>
    <%= form_with(url: sent_mail_create_groups_path, method: :get, local: true) do |f| %>
      <%= f.hidden_field :group_id ,:value => @group.id %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control introduction" %>
      </div>
      <div class="form-group d-flex">
        <%= f.submit '送信', class: 'btn btn-success ml-auto' %>
      </div>
    <% end %>
  </div>
</div>