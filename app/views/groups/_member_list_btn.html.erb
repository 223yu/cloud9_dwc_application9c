<% if current_user.owned?(group) %>
  <%= link_to 'Edit', edit_group_path(group), class:'btn btn-success' %>
<% else %>
  <% if current_user.joined?(group) %>
    <%= link_to 'Leave this group', group_user_path(group.id), method: :delete, remote: true, class:'btn btn-danger' %>
  <% else %>
    <%= link_to 'Join this group', group_users_path(group_id: group.id), method: :post, remote: true,  class:'btn btn-success' %>
  <% end %>
<% end %>